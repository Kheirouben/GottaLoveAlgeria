<?xml version="1.0" encoding="utf-8" ?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:backgroundTint="#ffffff"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="net.boukhalfa.gottalovealgeria.MainActivity">
    <VideoView
        android:id="@+id/VideoHolder"
        android:layout_width="fill_parent"
        android:layout_height="220dp"
        android:scaleType="centerCrop"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/textbackground"
        android:text="Follow Us On Social Media"
        android:textAlignment="center"
        android:textColor="#ddffffff"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/VideoHolder"
        android:layout_alignParentStart="true" />



    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/SocialMenu"
        android:layout_below="@+id/VideoHolder">


    </ListView>


</RelativeLayout>